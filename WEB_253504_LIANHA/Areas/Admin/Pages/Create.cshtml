@page
@model WEB_253504_LIANHA.Areas.Admin.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Automobile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Automobile.CategoryId" />
            <div class="form-group">
                <label asp-for="Automobile.Name" class="control-label"></label>
                <input asp-for="Automobile.Name" class="form-control" />
                <span asp-validation-for="Automobile.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Automobile.Description" class="control-label"></label>
                <input asp-for="Automobile.Description" class="form-control" />
                <span asp-validation-for="Automobile.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChosenCategoryId" class="control-label"></label>
                <select asp-for="ChosenCategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories, nameof(AutomobileCategory.Id), nameof(AutomobileCategory.Name)))">

                </select>
                <span asp-validation-for="ChosenCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Automobile.PriceInUsd" class="control-label"></label>
                <input asp-for="Automobile.PriceInUsd" class="form-control" type="number"/>
                <span asp-validation-for="Automobile.PriceInUsd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UploadedImage" class="control-label"></label>
                <input asp-for="UploadedImage" class="form-control" type="file"/>
                <span asp-validation-for="Automobile.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
